<%- include('../partials/user/header.ejs') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">


<main class="main">
    <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a href="index.html" rel="nofollow">Home</a>
                <span></span> Shop
                <span></span> Wishlist
            </div>
        </div>
    </div>
    <section class="mt-50 mb-50">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <% if (!wishlist || wishlist.length === 0) { %>
                        <div class="alert alert-info" role="alert">
                            <i class="fas fa-info-circle me-2"></i>Your wishlist is empty. Start adding some products!
                        </div>
                    <% } else { %>
                       
                    <div class="table-responsive">
                        <table class="table shopping-summery text-center">
                            
                            <thead>
                                <tr class="main-heading">
                                    <th scope="col" colspan="2">Product</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Stock Status</th>
                                    <th scope="col">Action</th>
                                    <th scope="col">Remove</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% wishlist.forEach(item => { %>
                                <tr>
                                    <td class="image product-thumbnail"><img src="/uploads/re-image/<%= item.productImage[0] %>" alt="<%= item.productName %>"></td>
                                    <td class="product-des product-name">
                                        <h5 class="product-name"> <%= item.productName %><a href="shop-product-right.html"></a></h5>
                                        <p class="font-xs"><%= item.description %>
                                        </p>
                                    </td>
                                    <td class="price" data-title="Price"><span>â‚¹<%= item.salePrice.toFixed(2) %></span></td>
                                    <td class="text-center" data-title="Stock">
                                        <% if(item.quantity > 0){ %>
                                        <span class="color3 font-weight-bold">In Stock: <%= item.quantity %></span>
                                        <% } else { %>
                                            <span class="color3 font-weight-bold" style="color:red;">Out of Stock</span>
                                            <% } %>
                                    </td>
                                    <td class="text-right" data-title="Cart">
                                        <button class="btn btn-sm"><i class="fi-rs-shopping-bag mr-5"></i>Add to cart</button>
                                    </td>
                                    <td class="action" data-title="Remove"><a href="#"><i class="fi-rs-trash"></i></a></td>
                                </tr>
                                
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<%- include('../partials/user/footer.ejs') %>