                <li class="page-item <%= currentPage == i ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= i %>&limit=10"><%= i %></a>
                </li>
                <% } %>
            </ul>
        </nav>
    </div>
    <% } %>
