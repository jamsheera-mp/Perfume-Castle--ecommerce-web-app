                    </select>
                </div>
            </div>-->
        </header>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Contact</th>
                            <th scope="col">Amount</th>
                            <th scope="col">Status</th>
                            <th scope="col">Payment</th>
                            <th scope="col">Date</th>
                            <th scope="col" class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (orders && orders.length > 0) { %>
                            <% orders.forEach(order => { %>
                            <tr>
                                <td><%= order.orderId %></td>
                                <td><b><%= order.userId.name %></b></td>
                                <td>
                                
                                    <small><%= order.userId.email %></small>
                                </td>
                                <td>â‚¹<%= order.finalAmount %></td>
                                <td>
                                    <span class="badge rounded-pill alert-<%= order.status.toLowerCase() === 'pending' ? 'warning' : 
                                        order.status.toLowerCase() === 'delivered' ? 'success' : 
                                        order.status.toLowerCase() === 'cancelled' ? 'danger' : 'info' %>">
                                        <%= order.status %>
                                    </span>
                                </td>
                                <td>
                                    <span class="badge badge-pill <%= order.paymentStatus === 'Paid' ? 'badge-success' : 'badge-warning' %>">
                                        <%= order.paymentMethod %> - <%= order.paymentStatus %>
                                    </span>
                                </td>
                                <td><%= new Date(order.createdAt).toLocaleDateString() %></td>
                                <td class="text-end">
                                    <a href="/admin/order/<%= order._id %>" class="btn btn-sm btn-light">Detail</a>
                                    <div class="dropdown d-inline-block">
                                        <a href="#" data-bs-toggle="dropdown" class="btn btn-light rounded btn-sm font-sm">
                                            <i class="material-icons md-more_horiz"></i>
                                        </a>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" href="/admin/order/<%= order._id %>">View detail</a>
                                            
                                            <% if (order.status !== 'Delivered' && order.status !== 'Cancelled') { %>
                                                <form action="/admin/order/update/<%= order._id %>" method="POST">
                                                    <button class="dropdown-item" type="submit">Update Status</button>
                                                </form>

                                                <form action="/admin/order/cancel/<%= order._id %>" method="POST">
                                                    <button class="dropdown-item text-danger" type="submit">Cancel</button>
                                                </form>
                                            <% } %>
                                        </div>
                                    </div>
                                </td>
                            </tr> 
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="8" class="text-center">No orders found</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <% if (totalPages > 1) { %>
    <div class="pagination-area mt-15 mb-50">
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-start">
                <% for(let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= currentPage == i ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= i %>&limit=10"><%= i %></a>
                </li>
                <% } %>
            </ul>
        </nav>
    </div>
    <% } %>
</section>

